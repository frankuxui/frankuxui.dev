<script>
  const initNavigateClient = () => {
    document.querySelectorAll("[data-toggle='navigate-client']").forEach((el) => {
      const href = el.getAttribute("href");

      if (!href || !href.startsWith("#")) return;

      // Escuchar el clic solo si el href es una referencia a ID
      el.addEventListener("click", (e) => {
        e.preventDefault();

        const targetId = href.slice(1);
        const targetEl = document.getElementById(targetId);

        if (targetEl) {
          targetEl.scrollIntoView({ behavior: "smooth" });
          // Opcional: actualizar hash en la URL sin recargar
          history.pushState(null, "", href);
        }
      });
    });
  };

  document.addEventListener("DOMContentLoaded", initNavigateClient);
  window.addEventListener("astro: page:load", initNavigateClient);
</script>
